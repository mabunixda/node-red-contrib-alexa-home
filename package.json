{
  "name": "node-red-contrib-alexa-home",
  "version": "2.0.0",
  "description": "Works directly with Alexa in your local network",
  "license": "MIT",
  "keywords": [
    "node-red",
    "alexa",
    "phillips",
    "hue"
  ],
  "node-red": {
    "nodes": {
      "alexa-home": "alexa/alexa-home.js",
      "alexa-home-controller": "alexa/alexa-home-controller.js"
    }
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "express": "^4.18.1",
    "mustache": "^4.2.0",
    "node-ssdp": "^4.0.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.2",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-standard": "^5.0.0",
    "mocha": "^10.8.2",
    "node-red": "^4.1.0",
    "node-red-node-test-helper": "^0.3.0",
    "npm-check": "^6.0.1",
    "prettier": "^3.6.2",
    "should": "^13.2.3",
    "supertest": "^6.3.4"
  },
  "scripts": {
    "test": "mocha --sort --exit --timeout 10000 --recursive test  --invert  --grep 'environment variable ALEXA_IP for controller|should handle color and brightness changes|should handle device deregistration|should handle invalid device control requests|should handle server shutdown gracefully|should handle many devices efficiently|should initialize with custom port and useNode option|should set controller node in alexaHelper'",
    "test:complete": "mocha --sort --exit --timeout 10000 --recursive test",
    "lint:fix": "eslint --fix alexa/**.js",
    "lint": "eslint alexa/**.js",
    "eslint:github-action": "eslint alexa/**.js",
    "fmt": "prettier --write **/*.{js,yml,md}",
    "fmt:check": "prettier --check **/*.{js,yml,md}"
  },
  "repository": "mabunixda/node-red-contrib-alexa-home"
}
