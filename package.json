{
  "name": "node-red-contrib-alexa-home",
  "version": "2.0.0",
  "description": "Works directly with Alexa in your local network",
  "license": "MIT",
  "engines": {
    "node": ">=18.5.0",
    "node-red": ">=4.0.0"
  },
  "keywords": [
    "node-red",
    "alexa",
    "phillips",
    "hue"
  ],
  "node-red": {
    "nodes": {
      "alexa-home": "alexa/nodes/alexa-lights.js",
      "alexa-home-controller": "alexa/nodes/alexa-home-controller.js",
      "alexa-blinds": "alexa/nodes/alexa-blinds.js",
      "alexa-temperature-sensor": "alexa/nodes/alexa-temperature-sensor.js"
    }
  },
  "dependencies": {
    "escape-html": "^1.0.3",
    "express": "^5.1.0",
    "node-ssdp": "^4.0.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "mocha": "^11.7.1",
    "node-red": "^4.1.0",
    "node-red-node-test-helper": "^0.3.0",
    "npm-check": "^6.0.1",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "should": "^13.2.3",
    "supertest": "^7.1.4"
  },
  "scripts": {
    "test": "mocha --sort --exit --timeout 5000 test/**/*.js",
    "lint:fix": "eslint --fix alexa/**/*.js test/**/*.js",
    "lint": "eslint alexa/**/*.js test/**/*.js",
    "eslint:github-action": "eslint alexa/**/*.js test/**/*.js",
    "fmt": "prettier --write **/*.{js,yml}",
    "fmt:check": "prettier --check **/*.{js,yml}",
    "coverage": "nyc npm test"
  },
  "repository": "mabunixda/node-red-contrib-alexa-home"
}
